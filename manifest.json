{
  "update_url": "https://edge.microsoft.com/extensionwebstorebase/v1/crx",
  "name": "ChatGPT Message counter",
  "version": "1.1",
  "manifest_version": 3,
  "description": "A Chrome extension that shows a counter on a chatgpt-v4 chat",
  "permissions": ["*://chat.openai.com/*"],
  "action": {},
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["content.js"]
    }
  ]
}